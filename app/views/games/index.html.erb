<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Relase date</th>
      <th>Description</th>
      <th>Rating</th>
      <th>Platform</th>
      <th>Developer</th>
      <th>Cover</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.title %></td>
        <td><%= game.price %></td>
        <td><%= game.relase_date %></td>
        <td><%= game.description %></td>
        <td><%= game.rating %></td>
        <td><%= game.platform.name %></td>
        <td><%= game.developer.name %></td>
        <td><%= image_tag game.cover.url(:thumb) %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

